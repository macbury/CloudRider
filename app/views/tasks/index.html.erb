<table class="zebra-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.task.title", :default => t("activerecord.labels.title", :default => "Title")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| -%>
   <tr>
    <td><%= task.id %></td>
        <td><%= link_to task.title, task_path(task) %>
    </td>
        <td><%= task.created_at %></td>
    <td>
      <%= link_to "Show", task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Destroy", task_path(task), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_task_path, :class => 'btn primary' %>
